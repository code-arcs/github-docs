navWidth = 200px;
.wrapper {

  nav {
    position: fixed;
    padding: 10px;
    width: navWidth;
    background: #fff;
    -webkit-box-shadow: 1px 2px 3px #ddd;
    box-shadow: 1px 2px 3px #ddd;
    border: 1px solid #ddd;
    border-radius: 3px;
    margin: 0 10px;
  }

  > main {
    margin: 10px;
    margin-left: navWidth + 45;
  }
}
