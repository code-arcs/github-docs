body {
  background-color: #eee;
  font-family: 'Roboto', sans-serif;
  font-size: 16px;
  margin: 0;
}

.badge {
  box-sizing border-box;
  display: inline-block;
  padding: 8px 0;
  width: 26px;
  text-align: center;
  background-color: #ccc;
  font-size: 0.95em;
}

.horizontal-list, .list {
  list-style: none;
  padding-left: 0;

  li {
    display: inline-block;
    padding: 0;

    .icon {
      margin-right: 6px;
    }

    a {
      text-decoration: none;
      color: inherit;
    }
  }
}

.list {
  list-style: none;
  padding-left: 0;
}

.has-after-label {
  &:after {
    content: ''
    display: block;
    position: absolute;
    top: -16px;
    font-size: 0.8em;
    color: #aaa;
  }
}

h1, h2, h3, h4 {
  a {
    color: #000;
  }
}

