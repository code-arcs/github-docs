article {
  position: relative;
  background: #fff;
  -webkit-box-shadow: 1px 2px 3px #ddd;
  box-shadow: 1px 2px 3px #ddd;
  border: 1px solid #ddd;
  border-radius: 3px;

  > main {
    position: relative;
    margin-top: 20px;
    text-align: justify;
    padding: 0 20px;
  }

  .service-badges {
    position: absolute;
    top: 0;
    right: 20px;

    .badge {
      border-bottom-right-radius 3px;
      border-bottom-left-radius 3px;

      &.badge-infrastructure {
        background-color: #ff8500;
        color: #fff;
      }
    }
  }

  h1 {
    margin-top: 0;

    small {
      color: #aaa;
      font-size: 0.6em;
    }
  }

  header {
    padding: 0 20px;
    padding-top: 20px;
    background: #f9f9f9;
    border-bottom: 1px solid #efefef;
  }

  .service-title {
    margin-bottom: 0;
  }

  .service-meta {
    position: relative;
    display: flex;
    flex-direction: column;
    margin: 20px 0 8px 0;
    font-size: 0.7em;

    ul {
      margin: 0;
    }

    li {
      padding: 2px 6px;
      margin: 2px 0;
      background: #efefef;
      border-radius: 3px;
    }

    .row {
      display: flex;

      &:not(:last-child) {
        margin-bottom: 24px;
      }

      > * {
        flex: 1 0 0;
        max-width: 33%;
        position: relative;
      }
    }

    .language:after {
      content: 'Used languages:'
    }

    .service:after {
      content: 'Depends on services:'
    }

    .maintainer:after {
      content: 'Service maintained by:'
    }

    .responsible:after {
      content: 'Responsible persons:'
    }

    .message {
      display: flex;

      .send, .consume {
        flex 1 0 0;
      }

      .send {
        padding-right: 1px;
      }
      .consume {
        padding-left: 1px;
      }

      &:after {
        content: 'AMQP Messages:'
      }
    }
  }

  .service-description {
    overflow-x: auto;
    position: relative;
    margin-top: 20px;
    text-align: justify;
    padding: 0 20px;
  }

  .service-summary {
    position: relative;
    flex: 1 0 0;
  }
}
