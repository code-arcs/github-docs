article {
  position: relative;
  background: #fff;
  -webkit-box-shadow: 1px 2px 3px #ddd;
  box-shadow: 1px 2px 3px #ddd;
  border: 1px solid #ddd;
  border-radius: 3px;

  .service-badges {
    position: absolute;
    top: 0;
    right: 20px;

    .badge {
      border-bottom-right-radius 3px;
      border-bottom-left-radius 3px;

      &.badge-infrastructure {
        background-color: #ff8500;
        color: #fff;
      }
    }
  }

  h1 {
    margin-top: 0;

    small {
      color: #aaa;
      font-size: 0.6em;
    }
  }


  header {
    padding: 0 20px;
    padding-top: 20px;
    background: #f9f9f9;
    border-bottom: 1px solid #efefef;
  }

  .service-title {
    margin-bottom: 0;
  }

  .service-meta {
    display: flex;
    margin: 20px 0 8px 0;
    font-size: 0.7em;

    ul {
      margin: 0;
    }

    li {
      padding: 2px 6px;
      margin: 2px 0;
      background: #efefef;
      border-radius: 3px;
    }

    > * {
      flex: 1 0 0;
      position: relative;
    }

    .language:after {
      content: 'Used languages:'
    }

    .service:after {
      content: 'Depends on services:'
    }

    .maintainer:after {
      content: 'Service maintained by:'
    }

    .responsible:after {
      content: 'Responsible persons:'
    }
  }

  .service-description {
    position: relative;
    margin-top: 20px;
    text-align: justify;
    padding: 0 20px;
  }

}
